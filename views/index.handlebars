<div class="jumbotron">
  <h1 class="display-1 text-center">Burger Time!</h1>
</div>



<div class="container">
  <div class="row">
    <div class="col bg-light">

      <h2>Burgers that need to be devoured</h2>

      <ul>

        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block ate=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col bg-dark">
      <img
        src="https://thumbs.dreamstime.com/b/burger-colorful-vector-cartoon-fast-food-burger-vector-clipart-icon-burger-colorful-vector-cartoon-fast-food-burger-vector-clipart-123335524.jpg"
        class="img-fluid" alt="Responsive image">
    </div>

    <div class="col bg-light">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block ate=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="row">
  <div class="col text-center">
    <h2>Add A Burger!</h2>
    <form class="newBurger">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button type="submit">Add A Burger!</button>
    </form>
  </div>
</div>